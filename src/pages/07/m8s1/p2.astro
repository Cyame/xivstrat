---
import DutyStratLayout from '@/layouts/DutyStratLayout.astro'

import SeparatorSection from '@/components/section/SeparatorSection.astro'
import Span from '@/components/Span.vue'
import EventSection from '@/components/section/EventSection.astro'
import DraftWarning from '@/components/DraftWarning.astro'

import TacticalPackCast from './_components/TacticalPackCast.astro'
import UntargetbaleEvent from './_components/UntargetableEvent.astro'
import HowlingHavocCast from './_components/HowlingHavocCast.astro'
import WolvesAppearEvent from './_components/WolvesAppearEvent.astro'
import PackPredationCast from './_components/PackPredationCast.astro'
import ClearWindborneEndEvent from './_components/ClearWindborneEndEvent.astro'
import ClearEarthborneEndEvent from './_components/ClearEarthborneEndEvent.astro'
import ForlornWindCast from './_components/ForlornWindCast.astro'
import ForlornStoneCast from './_components/ForlornStoneCast.astro'
import RavenousSaberCast from './_components/RavenousSaberCast.astro'
import MoveToNorthEvent from './_components/MoveToNorthEvent.astro'

import TracticalPack from './_mechanics/TacticalPack.astro'
import { translations } from './_translations'

const dutyId = '07/m8s1'
const base = '02:53.751'
---

<DutyStratLayout dutyId={dutyId}>
  <SeparatorSection />
  <DraftWarning />
  <SeparatorSection />

  <MoveToNorthEvent time="02:53.751" base={base} />
  <SeparatorSection id="tactical-pack" title={translations.tacticalPack} />
  <TacticalPackCast start="02:56.110" base={base} />
  <UntargetbaleEvent time="03:01.224" base={base} />
  <WolvesAppearEvent time="03:03.400" base={base} />
  <EventSection time="03:03.400">
    场中出现半径
    <Span variant="pink">8m</Span>
    的圆形范围提示
  </EventSection>
  <HowlingHavocCast start="03:03.400" base={base} />
  <EventSection time="03:09.002">
    场中半径
    <Span variant="pink">8m</Span>
    的圆形区域变为即死区
  </EventSection>

  <PackPredationCast start="03:13.586" base={base} />
  <ClearEarthborneEndEvent time="03:20.000" base={base} />
  <ClearWindborneEndEvent time="03:24.000" base={base} />

  <PackPredationCast start="03:27.703" base={base} />
  <ClearEarthborneEndEvent time="03:34.000" base={base} />
  <ClearWindborneEndEvent time="03:38.000" base={base} />

  <PackPredationCast start="03:41.8422" base={base} />
  <ClearEarthborneEndEvent time="03:48.000" base={base} />
  <ClearWindborneEndEvent time="03:52.000" base={base} />

  <ForlornWindCast start="04:01.992" base={base} />
  <ForlornStoneCast start="04:01.992" base={base} />

  <TracticalPack time="02:56.110" base={base} />

  <SeparatorSection id="ravenous-saber" title="風塵光狼斬" />

  <RavenousSaberCast start="04:14.555" damage="60000" duration={3.1} />
  <RavenousSaberCast start="04:14.555" damage="60000" duration={3.3} />
  <RavenousSaberCast start="04:14.555" damage="60000" duration={3.6} />
  <RavenousSaberCast start="04:14.555" damage="100000" duration={5.7} />
  <RavenousSaberCast start="04:14.555" damage="210000" duration={7.0} />
</DutyStratLayout>
