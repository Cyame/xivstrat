---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'
import Span from '@/components/Span.vue'

import BloomingAbomination from './BloomingAbomination.astro'

interface Props {
  start: Time
  num: number
  base?: Time
}

const { start, num, base = 0 }: Props = Astro.props
---

<CastSection start={start} base={base} duration={6.7} ability="Crossing Crosswinds">
  <Span variant="red" slot="source"> Blooming Abomination {num}</Span>
  <Badge variant="pink">十字Aoe</Badge>
</CastSection>
