---
import type { Time } from '@/lib/utils'
import CastSection from '@/components/section/CastSection.astro'
import Badge from '@/components/Badge.astro'
import RoleIcon from '@/components/RoleIcon.astro'

interface Props {
  start: Time
  base?: Time
}

const { start, base = 0 }: Props = Astro.props
---

<CastSection
  start={start}
  base={base}
  duration={4.7}
  ability='Smash Here/There'
  target
  damage='730000'
  damageType='physical'
>
  <Fragment slot='target'>
    <RoleIcon role='all' tag='最近' />
    或
    <RoleIcon role='all' tag='最远' />
  </Fragment>
  <Badge variant='red'>死刑</Span>
  <Badge variant='pink'>分摊</Span>
</CastSection>
