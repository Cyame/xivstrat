---
interface Props {
  tag: 'z1' | 'z2' | 'z3' | 'z4' | 'za' | 'zb' | 'zc' | 'zd'
  class?: string
  alt?: string
}

const { tag = 'z1', class: className = '', alt = tag }: Props = Astro.props

import z1 from '@/assets/mark/z1.png'
import z2 from '@/assets/mark/z2.png'
import z3 from '@/assets/mark/z3.png'
import z4 from '@/assets/mark/z4.png'
import za from '@/assets/mark/za.png'
import zb from '@/assets/mark/zb.png'
import zc from '@/assets/mark/zc.png'
import zd from '@/assets/mark/zd.png'

const img = {
  z1, z2, z3, z4, za, zb, zc, zd,
}[tag]
---

<img src={img.src} alt={alt} class={className} width="30" height="30" />
