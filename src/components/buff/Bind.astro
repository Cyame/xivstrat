---
import Buff from '@/components/Buff.astro'

import icon from '@/assets/buff/215003.png'

interface Props {
  tag?: string
  hover?: boolean
  class?: string
}

const { tag = '', hover = false, class: className = '' }: Props = Astro.props
---

<Buff
  icon={icon}
  name="止步"
  nameVariant="yellow"
  description="无法自由移动"
  tag={tag}
  hover={hover}
  class={className}
/>
